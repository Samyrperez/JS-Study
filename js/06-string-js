//Strings

let myName = "Sam"
let greeting = "Hola, " + myName
console.log(greeting)
console.log(typeof greeting)

//Longitud: Tamño del texto
console.log(greeting.length)

//Acceso a los caracteres 
console.log(greeting[0])
console.log(greeting[1])//letra que esta en la posicion o indice 1


//Metodos comunes
console.log(greeting.toUpperCase())//Tranforma todos los caracteres o letras en mayusculas
console.log(greeting.toLowerCase())//Tranforma todos los caracteres o letras en minusculas
console.log(greeting.indexOf("Sam"))//Busca el indice donde puedo encontrar mi palabra
console.log(greeting.includes("Samperez"))//Compureba si el elemento o texto existe en la variable.  en este caso imprimirá FALSE
conosole.log(greeting.slice(0, 7))//slice sirve para retornar solo la parte que yo le indique. En este caso me retornará 